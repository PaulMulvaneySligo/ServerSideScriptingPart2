<header id="booking" class="masthead d-flex align-items-center">
    <div class="container px-4 px-lg-5 text-center">
        <div class="card text-white bg-primary mb-3  col-md-6 col12">
        <div class="card-body">
        <h3 class="card-title">De'Villes Booking Admin Portal</h3>
        <p class="card-text">De'Villes admin portal for quick bookings editing</p>

        <h3 class="card-title mb-3">Upcoming Bookings</h3>
        {{#each booking}}
        <ul>
        <li class= "" > 
            <div class="text-white row">
            <div class="col-3">{{this.name}}:</div>
            <div class="col-3">{{this.people}}</div>
            <div class="col-3">{{this.time}}</div>
            <div class="col-3">{{this.date}}</div>
            </div>
        </li> 
        </ul>
        <a href='/booking/admin/edit/{{this.name}}'>
        <button type="button" class="btn col-4 btn-outline-light btn-sm mb-4">View Booking</button></a>

        <a href='/booking/admin/delete/{{this.name}}' onclick="return confirm('are you sure you want to delete this booking?');">
        <button type="button" class="btn col-4 btn-outline-danger btn-sm mb-4">Delete</button> </a>   
        
        {{/each}}

        </div>
        </div>

        
    </div>
</header>


