<div id="booking" class="masthead d-flex align-items-center">
    <div class="container px-4 px-lg-5 text-center">
        <div class="card text-white bg-primary mb-3  col-md-6 col-12">
            <div class="card-body">
            <h3 class="card-title">Edit Booking Details</h3>
            <form method="post">

            <div class="form-group">
                <label for='name'>Name</label>
                <input type=text id='name' name='name' class='form-control' value={{book.name}}>
            </div>

             <div class="form-group">
                <label for='people' class="form-label mt-2">People</label>
                    <select class="form-select" id="people" name='people'>
                        <option selected>{{book.people}}</option>
                        <option>1 Person</option>
                        <option>2 People</option>
                        <option>3 People</option>
                        <option>4 People</option>
                        <option>5 People</option>
                    </select>
            </div>

            <div class="form-group">
                <label for="date" class="form-label mt-2">Date</label>
                    <input class="form-select" type="date" id="date" name='date' value={{book.date}}>
            </div>

            <div class="form-group">
                <label for="time" class="form-label mt-2">Time</label>
                    <select class="form-select" id="time" name='time'>
                        <option selected>{{book.time}}</option>
                        <option>6:30 PM</option>
                        <option>7:00 PM</option>
                        <option>7:30 PM</option>
                        <option>8:00 PM</option>
                        <option>8:30 PM</option>
                        <option>9:00 PM</option>
                    </select>
            </div> 
            {{!-- This hidden element lets us use the document --}} 
                <input type="hidden" id="_id" name="_id" value="{{book._id}}" />

                <button type=submit class="btn btn-outline-warning mt-2">Save Changes</button>
 
                </div>

            </form>
            </div>
        </div>
    </div>
</div>

